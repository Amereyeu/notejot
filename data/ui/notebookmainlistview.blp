using Gtk 4.0;
using He 1;

template $NotejotNotebookMainListView : He.Bin {
  vexpand: true;

  ScrolledWindow {
    hscrollbar-policy: never;
    vexpand: true;
    hexpand: true;

    ListView lv {
      styles [
        "navigation-section-list"
      ]
      factory: BuilderListItemFactory {
        resource: "/io/github/lainsce/Notejot/notebookmainrow.ui";
      };
      model: SingleSelection selection_model {
        autoselect: false;
        can-unselect: true;
        model: bind template.nbview-model as <$NotejotNotebookViewModel>.notebooks;
      };
    }
  }
}