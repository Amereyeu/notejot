<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="NotejotMainWindow" parent="AdwApplicationWindow">
    <property name="visible">1</property>
    <property name="default-width">830</property>
    <property name="default-height">700</property>
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <property name="homogeneous">1</property>
        <child>
          <object class="AdwLeaflet" id="leaflet">
            <property name="can-navigate-back">1</property>
            <property name="can-navigate-forward">1</property>
            <child>
              <object class="GtkBox" id="sgrid">
                <property name="hexpand">0</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwHeaderBar" id="stitlebar">
                    <property name="show-end-title-buttons" bind-source="leaflet" bind-property="folded" bind-flags="sync-create"/>
                    <property name="valign">center</property>
                    <property name="hexpand">0</property>
                    <property name="width-request">200</property>
                    <style>
                      <class name="notejot-stitle"/>
                      <class name="notejot-sbtitle"/>
                    </style>
                    <child type="end">
                      <object class="GtkMenuButton" id="menu_button">
                        <property name="icon-name">open-menu-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="en_button">
                        <property name="action-name">win.action_edit_notebooks</property>
                        <property name="icon-name">notebook-config-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Manage Notebooksâ€¦</property>
                      </object>
                    </child>
                    <child type="title">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkSearchEntry" id="note_search">
                            <property name="hexpand">1</property>
                            <property name="max-width-chars">10</property>
                            <property name="placeholder-text" translatable="yes">Search notes</property>
                            <style>
                              <class name="notejot-searchbar"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkStack" id="sidebar_stack">
                    <property name="vexpand">1</property>
                    <property name="hexpand">0</property>
                    <property name="transition-type">crossfade</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">page0</property>
                        <property name="title">page0</property>
                        <property name="child">
                          <object class="GtkOverlay" id="list_scroller">
                            <child>
                              <object class="GtkBox">
                                <property name="vexpand">1</property>
                                <property name="hexpand">0</property>
                                <property name="orientation">vertical</property>
                                <child>
                                  <object class="GtkScrolledWindow" id="bscroller">
                                    <property name="hscrollbar-policy">never</property>
                                    <property name="vexpand">1</property>
                                    <child>
                                      <object class="NotejotLogListView" id="listview">
                                        <signal name="new_note_requested" handler="on_new_note_requested" />
                                        <binding name="notes">
                                          <lookup name="notes" type="NotejotLogViewModel">
                                            <lookup name="view-model">NotejotMainWindow</lookup>
                                          </lookup>
                                        </binding>
                                        <binding name="view-model">
                                          <lookup name="view-model">NotejotMainWindow</lookup>
                                        </binding>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child type="overlay">
                              <object class="GtkButton" id="new_button">
                                <property name="tooltip-text" translatable="yes">Add Note</property>
                                <property name="icon-name">list-add-symbolic</property>
                                <signal name="clicked" handler="on_new_note_requested" />
                                <property name="valign">end</property>
                                <property name="halign">end</property>
                                <property name="margin-end">18</property>
                                <property name="margin-bottom">18</property>
                                <style>
                                  <class name="list-action-button"/>
                                  <class name="accent-button"/>
                                  <class name="opaque"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwLeafletPage">
                <property name="navigatable">0</property>
                <property name="child">
                  <object class="GtkSeparator">
                    <style>
                      <class name="no-sep"/>
                    </style>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="grid">
                <property name="hexpand">1</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwHeaderBar" id="titlebar">
                    <property name="show-start-title-buttons" bind-source="leaflet" bind-property="folded" bind-flags="sync-create"/>
                    <property name="hexpand">1</property>
                    <child type="title">
                      <object class="GtkBox">
                      </object>
                    </child>
                    <style>
                      <class name="notejot-titlebar"/>
                    </style>
                    <child>
                      <object class="GtkButton" id="back_button">
                        <property name="visible" bind-source="leaflet" bind-property="folded" bind-flags="sync-create"/>
                        <property name="receives-default">1</property>
                        <property name="icon-name">go-previous-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="NotejotLogContentView">
                    <property name="hexpand">yes</property>
                    <signal name="note_update_requested" handler="on_note_update_requested" />
                    <signal name="note_removal_requested" handler="on_note_removal_requested" />
                    <binding name="note">
                      <lookup name="selected-note">listview</lookup>
                    </binding>
                    <binding name="vm">
                      <lookup name="view-model">NotejotMainWindow</lookup>
                    </binding>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
