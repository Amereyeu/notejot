<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libhandy" version="0.0"/>
  <template class="NotejotWidgetsMoveToDialog" parent="AdwWindow">
    <property name="title" translatable="yes">Move to a Notebook</property>
    <property name="modal">1</property>
    <property name="default-width">360</property>
    <property name="default-height">480</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar">
            <property name="show-start-title-buttons">0</property>
            <property name="show-end-title-buttons">0</property>
            <child type="end">
              <object class="GtkButton" id="move_button">
                <property name="label" translatable="yes">Move</property>
                <property name="sensitive">0</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="cancel_button">
                <property name="label" translatable="yes">Cancel</property>
              </object>
            </child>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkListBox" id="notebook_listbox">
            <property name="vexpand">1</property>
            <style>
              <class name="content"/>
              <class name="content-sidebar"/>
            </style>
            <child type="placeholder">
              <object class="AdwStatusPage">
                <property name="valign">center</property>
                <property name="vexpand">1</property>
                <property name="icon-name">notebook-symbolic</property>
                <property name="title" translatable="yes">No Notebooks</property>
                <property name="description" translatable="yes">There are no notebooks.</property>
                <style>
                  <class name="compact"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="remove_notebook_button">
            <property name="label" translatable="yes">Detach Note From Any Notebook</property>
            <property name="tooltip-text" translatable="yes">Removes this Note from any known Notebook.</property>
            <property name="sensitive">0</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">6</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
