<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libhandy" version="0.0"/>
  <template class="NotejotWidgetsMoveToDialog" parent="HeWindow">
    <property name="modal">1</property>
    <property name="resizable">0</property>
    <property name="default-width">360</property>
    <property name="default-height">480</property>
    <property name="default-widget">move_button</property>
    <binding name="notebook">
      <lookup name="selected-notebook">listview</lookup>
    </binding>
    <child>
      <object class="GtkShortcutController">
        <property name="scope">managed</property>
        <child>
          <object class="GtkShortcut">
            <property name="trigger">Escape</property>
            <property name="action">action(window.close)</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="HeAppBar">
            <property name="show-buttons">1</property>
            <property name="show-back">0</property>
            <property name="flat">1</property>
          </object>
        </child>
        <child>
          <object class="HeViewTitle">
            <property name="label">Move to a Notebook</property>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="vexpand">1</property>
            <child>
              <object class="NotejotNotebookMoveListView" id="listview">
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <binding name="notebooks">
                  <lookup name="notebooks" type="NotejotNotebookViewModel">
                    <lookup name="nbview-model">NotejotWidgetsMoveToDialog</lookup>
                  </lookup>
                </binding>
                <style>
                  <class name="boxed-list"/>
                  <class name="content-sidebar"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <child>
              <object class="HeTintButton" id="remove_notebook_button">
                <property name="label" translatable="yes">Detach Note From Notebook</property>
                <property name="tooltip-text" translatable="yes">Removes this Note from its Notebook.</property>
                <property name="sensitive">0</property>
                <property name="margin-start">18</property>
                <property name="margin-end">12</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">18</property>
                <signal name="clicked" handler="on_remove_notebook_requested" />
              </object>
            </child>
            <child>
              <object class="HeFillButton" id="move_button">
                <property name="label" translatable="yes">Move Note To Notebook</property>
                <property name="tooltip-text" translatable="yes">Moves this Note to a Notebook.</property>
                <property name="sensitive">0</property>
                <property name="margin-start">12</property>
                <property name="margin-end">18</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">18</property>
                <signal name="clicked" handler="on_move_notebook_requested" />
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
