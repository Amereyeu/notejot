<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="NotejotNoteGridView" parent="HeBin">
    <property name="vexpand">1</property>
    <property name="hexpand">1</property>
    <child>
      <object class="GtkBox" id="box">
        <property name="orientation">vertical</property>
        <child>
          <object class="HeAppBar" id="stitlebar">
            <property name="show-buttons">0</property>
            <property name="flat">1</property>
            <property name="valign">center</property>
            <property name="hexpand">1</property>
          </object>
        </child>
        <child>
          <object class="HeViewTitle">
            <property name="label" translatable="yes">NoteGrid</property>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="vexpand">1</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            <child>
              <object class="GtkGridView" id="gv">
                <property name="max-columns">5</property>
                <property name="hexpand">1</property>
                <style>
                  <class name="content-sidebar"/>
                </style>
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/io/github/lainsce/Notejot/notegridrow.ui</property>
                  </object>
                </property>
                <binding name="model">
                  <lookup name="ss">NotejotNoteGridView</lookup>
                </binding>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
